{
  "name": "react-training-workshop",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node scripts/start.js",
    "app": "npm start app",
    "build": "webpack --mode production --config config/webpack.config.production.js",
    "test": "NODE_PATH=./apps jest",
    "kill-db-port": "node scripts/kill-db-port 3333",
    "create-db": "node scripts/create-db",
    "postinstall": "npm run create-db",
    "glossary": "node --no-warnings scripts/glossary-pdf.js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "babel-loader": "^8.2.1",
    "compression-webpack-plugin": "^2.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^3.6.0",
    "dotenv": "^5.0.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "md-to-pdf": "^3.1.2",
    "mini-css-extract-plugin": "^0.8.2",
    "mock-match-media": "^0.1.4",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react-test-renderer": "^17.0.1",
    "readline-sync": "^1.4.10",
    "sass-loader": "^7.3.1",
    "shelljs": "^0.8.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@reach/descendants": "^0.8.2",
    "@reach/menu-button": "^0.11.2",
    "@reach/rect": "^0.11.2",
    "@reach/tabs": "^0.11.2",
    "@reduxjs/toolkit": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "classnames": "^2.2.6",
    "eslint-loader": "^4.0.2",
    "form-serialize": "^0.7.2",
    "json-server": "^0.16.3",
    "lodash.debounce": "^4.0.8",
    "mobx": "^6.0.4",
    "mobx-react": "^7.0.5",
    "mobx-react-lite": "^3.1.6",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-flex-columns": "^0.4.3",
    "react-icons": "^3.11.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/no-children-prop": "off",
      "react/no-unescaped-entities": "off",
      "no-unused-vars": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/display-name": "off"
    },
    "ignorePatterns": [
      "/node_modules/**",
      "/build/**"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
